# API ключ для сервиса конвертации валют (Exchange Rates Data API)
EXCHANGE_RATE_API_KEY=your_api_key_here

# Настройки логирования (опционально)
LOG_FILE_PATH=operations.log
LOG_LEVEL=INFO

# Настройки подключения к API (если будут добавляться другие сервисы)
API_BASE_URL=https://api.example.com
API_TIMEOUT=30

# Настройки приложения (опционально)
DEBUG_MODE=False
MAX_TRANSACTIONS=100

# Конфигурация базы данных
DATABASE_HOST=localhost     # Хост для базы данных
DATABASE_USER=username      # Имя пользователя базы данных
DATABASE_PASSWORD=password  # Пароль базы данных
DATABASE_NAME=mydatabase    # Имя базы данных.